{
  "name": "adk",
  "version": "0.3.0",
  "description": "Google ADK JS",
  "author": "Google",
  "license": "Apache-2.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/google/adk-js"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces",
    "clean:all": "rm -rf ./node_modules && npm run clean:all --workspaces",
    "rebuild": "npm run clean:all && npm install && npm run build",
    "lint": "eslint **/**.ts",
    "lint:fix": "eslint --fix **/**.ts",
    "format": "prettier **/**.ts --write",
    "format:check": "prettier **/**.ts --check",
    "docs": "npm run docs:clean && npm run docs:generate && npm run docs:serve",
    "docs:clean": "rm -rf ./api-reference",
    "docs:generate": "typedoc",
    "docs:serve": "http-server api-reference/typescript",
    "docs:check": "typedoc --emit none --treatWarningsAsErrors",
    "test": "vitest",
    "prepare": "husky"
  },
  "workspaces": [
    "core",
    "dev"
  ],
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^20.12.7",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.9",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "gts": "^5.3.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typedoc": "^0.28.16",
    "typedoc-theme-fresh": "^0.2.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
